<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="root" fx:controller="com.github.cshubhamrao.AUtDv2.UIController" 
      xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" 
      spacing="10.0">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <FlowPane alignment="CENTER" hgap="7.0" style="-fx-border-color: grey;">
        <ImageView fitHeight="48.0" fitWidth="48.0" preserveRatio="true">
            <Image url="https://s3.amazonaws.com/uifaces/faces/twitter/marcogomes/48.jpg" />
        </ImageView>
        <Label text="Welcome Marco Gomes! Have a nice day!" />
        <Button fx:id="btn_userAction" text="Sign Out / Switch User" />
        <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
        </padding>
    </FlowPane>
    <GridPane style="-fx-border-color: grey;">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" />
            <ColumnConstraints halignment="LEFT" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints fillHeight="false" maxHeight="-Infinity" minHeight="10.0" prefHeight="30.0" 
                            vgrow="NEVER" />
            <RowConstraints fillHeight="false" maxHeight="-Infinity" minHeight="10.0" prefHeight="30.0" 
                            vgrow="SOMETIMES" />
            <RowConstraints fillHeight="false" maxHeight="-Infinity" minHeight="10.0" prefHeight="30.0" 
                            vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="90.0" valignment="TOP" vgrow="ALWAYS" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" />
        </rowConstraints>
        <opaqueInsets>
            <Insets bottom="5.0" top="5.0" />
        </opaqueInsets>
        <children>
            <Label alignment="CENTER_RIGHT" prefWidth="176.0" text="C.W. / Period Number:">
                <GridPane.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </GridPane.margin>
            </Label>
            <Spinner maxWidth="Infinity" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS">
                <GridPane.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </GridPane.margin>
            </Spinner>
            <Label text="Date:" GridPane.rowIndex="1">
                <GridPane.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </GridPane.margin>
            </Label>
            <DatePicker maxWidth="Infinity" promptText="Select Date..." GridPane.columnIndex="1" GridPane.rowIndex="1">
                <GridPane.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </GridPane.margin>
            </DatePicker>
            <Label text="Topic:" GridPane.rowIndex="2">
                <GridPane.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </GridPane.margin>
            </Label>
            <ChoiceBox fx:id="cb_topic" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="2">
                <GridPane.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </GridPane.margin>
            </ChoiceBox>
            <Label alignment="CENTER" text="Name/Description:&#10;(Recommended)" textAlignment="RIGHT" 
                   GridPane.rowIndex="3">
                <GridPane.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </GridPane.margin>
            </Label>
            <TextArea prefHeight="200.0" prefWidth="200.0" promptText="Enter Name/Description Here..." 
                      GridPane.columnIndex="1" GridPane.rowIndex="3">
                <GridPane.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </GridPane.margin>
            </TextArea>
            <Label text="Project Location:" GridPane.rowIndex="4">
                <GridPane.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </GridPane.margin>
            </Label>
            <HBox prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
                <children>
                    <TextField prefHeight="26.0" prefWidth="125.0">
                        <HBox.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </HBox.margin>
                    </TextField>
                    <Button prefHeight="26.0" prefWidth="71.0" text="Browse">
                        <HBox.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </HBox.margin>
                    </Button>
                </children>
            </HBox>
        </children>
        <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
        </padding>
    </GridPane>
    <TitledPane collapsible="false" text="Statistics">
        <content>
            <VBox alignment="TOP_CENTER">
                <children>
                    <Label text="Uploads Done:" />
                    <Label text="5">
                        <font>
                            <Font size="42.0" />
                        </font>
                    </Label>
                    <Label text="KBs Uploaded:" />
                    <Label layoutX="196.0" layoutY="36.0" text="15">
                        <font>
                            <Font size="42.0" />
                        </font>
                    </Label>
                </children>
            </VBox>
        </content>
    </TitledPane>
   <GridPane>
      <columnConstraints>
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" prefWidth="50.0" />
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
      </rowConstraints>
      <children>
         <Button fx:id="btn_NetBeans" maxHeight="Infinity" maxWidth="Infinity" prefHeight="60.0" prefWidth="137.0" 
                 text="Start NetBeans">
            <GridPane.margin>
               <Insets bottom="5.0" right="5.0" top="5.0" />
            </GridPane.margin>
         </Button>
         <Button fx:id="btn_MySQL" maxHeight="Infinity" maxWidth="Infinity" prefHeight="70.0" text="Start MySQL" 
                 GridPane.columnIndex="1">
            <GridPane.margin>
               <Insets bottom="5.0" left="5.0" top="5.0" />
            </GridPane.margin>
         </Button>
      </children>
   </GridPane>
    <Label text="Made by @cshubhamrao" />
</VBox>
